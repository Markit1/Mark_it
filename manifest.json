{
  "manifest_version": 2,
	"name": "Mark_it!",
  "version": "1.0",
  "description": "Mark_it the web!",

  "page_action" :
  {
    "default_icon" : "images/amarkit.png",
    "default_title" : "There's a <mark_it> in this page!",
    "default_popup": "popup.html"
  },
  "permissions": [
    "contextMenus",
    "tabs",
    "activeTab",
    "declarativeContent"
	],
  "icons" : {
    "48" : "images/markit.png",
    "128" : "images/markit.png"
  },

  "background": {
    "scripts": ["scripts/background.js"],
    "persistent":false
  },

  "content_scripts": [ {
    "matches": [ "http://jquery.com/*", "https://*/*", "http://*/*"],
    "js": [ "scripts/jquery.min.js","scripts/getSelect.js"],
    "css": ["css/popup.css"]
  }]
}
